{
  "manifest_version": 3,
  "name": "Smart Screenshot Notes",
  "version": "1.0",
  "description": "Capture screenshots with context and notes directly from your browser.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon128.png",
      "48": "assets/icon128.png",
      "128": "assets/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
